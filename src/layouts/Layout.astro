---
// src/layouts/Layout.astro
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Omnia360',
  showFooter = true,
  footerType = 'default',
  background = '/bg-omnia.png'
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Head slot para inyectar estilos o scripts adicionales -->
    <slot name="head" />

    <style>
      body {
        font-family: 'Segoe UI', sans-serif;
        position: relative;
        margin: 0;
        background: url('/bg-mindgrow.png') no-repeat center center fixed;
        background-size: cover;
      }

      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.78); /* Puedes subir o bajar el 0.5 según claridad deseada */
        z-index: -1;
        pointer-events: none;
      }

      .bg-cover::before {
        content: '';
        position: fixed;
        inset: 0;
        background: url('/bg-mindgrow.png') no-repeat center center;
        background-size: cover;
        z-index: -1;
        opacity: 1;
      }

      .section-blur,
      .section-white,
      .feature-section,
      footer {
        position: relative;
        z-index: 1;
      }

      .section-blur {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(8px);
        padding: 3rem 2rem;
        max-width: 1000px;
        margin: 4rem auto;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
      }

      .section-white {
        background: white;
        color: #1a1a1a;
        padding: 3rem 2rem;
        max-width: 1000px;
        margin: 4rem auto;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
      }

      .hero {
        padding: 6rem 2rem;
        text-align: center;
        background: linear-gradient(to right, #003366, #00509e);
        color: white;
      }

      .btn {
        background: #0077cc;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: bold;
        text-decoration: none;
        transition: background 0.3s ease;
      }

      .btn:hover {
        background: #00509e;
      }

      h1, h2 {
        margin-bottom: 1rem;
        text-align: center;
      }

      ul {
        list-style: none;
        padding-left: 0;
        max-width: 800px;
        margin: 2rem auto;
        text-align: left;
      }

      ul li {
        margin-bottom: 1rem;
        line-height: 1.5;
      }
    </style>
  </head>

  <body style="background: url('/bg-mindgrow.png') no-repeat center center fixed; background-size: cover;">

    <Navbar />

    <!-- Contenido dinámico de cada página -->
    <slot />

    {showFooter && <Footer type={footerType} />}
  </body>
</html>
