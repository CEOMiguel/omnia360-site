---
// src/layouts/Layout.astro
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Omnia360',
  showFooter = true,
  footerType = 'default',
  background = '/bg-omnia.png'
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- AOS (Animate On Scroll) CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
    />

    <!-- Head slot para inyectar estilos o scripts adicionales -->
    <slot name="head" />

    <style>
      body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        font-size: 120%;
        color: #1a1a1a;
        background: url('{background}') no-repeat center center fixed;
        background-size: cover;
      }

      .section-blur {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(8px);
        padding: 3rem 2rem;
        max-width: 1000px;
        margin: 4rem auto;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
      }

      .section-white {
        background: white;
        color: #1a1a1a;
        padding: 3rem 2rem;
        max-width: 1000px;
        margin: 4rem auto;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
      }

      .hero {
        padding: 6rem 2rem;
        text-align: center;
        background: linear-gradient(to right, #003366, #00509e);
        color: white;
      }

      .btn {
        background: #0077cc;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: bold;
        text-decoration: none;
        transition: background 0.3s ease;
      }

      .btn:hover {
        background: #00509e;
      }

      h1, h2 {
        margin-bottom: 1rem;
        text-align: center;
      }

      ul {
        list-style: none;
        padding-left: 0;
        max-width: 800px;
        margin: 2rem auto;
        text-align: left;
      }

      ul li {
        margin-bottom: 1rem;
        line-height: 1.5;
      }
    </style>
  </head>

  <body>
    <Navbar />

    <!-- Contenido dinámico de cada página -->
    <slot />

    {showFooter && <Footer type={footerType} />}

    <!-- AOS JS desde CDN (Animaciones al hacer scroll) -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
      AOS.init({
        duration: 1000, // duración de animaciones
        once: false     // true si quieres que solo se animen una vez
      });
    </script>
  </body>
</html>
