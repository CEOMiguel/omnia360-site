---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Contacto - Omnia360',
  showFooter = true,
  footerType = 'default',
  background = '/bg-omnia.png'
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <slot name="head" />
    <style>
      body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        font-size: 110%;
        color: #1a1a1a;
        background: url('{background}') no-repeat center center fixed;
        background-size: cover;
      }

      .section-contact {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(6px);
        padding: 3rem 2rem;
        max-width: 960px;
        margin: 4rem auto;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
      }

      h1 {
        text-align: center;
        color: #003366;
        margin-bottom: 1.5rem;
      }

      iframe {
        width: 100%;
        height: 600px;
        border: none;
        border-radius: 8px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.1);
      }
    </style>
  </head>

  <body>
    <Navbar />
    <main>
      <section class="section-contact">
        <h1>Cont√°ctanos</h1>
        <iframe 
          aria-label="Contacto Omnia360"
          src="https://forms.zohopublic.com/miguelomni1/form/FormulariodeContactoOmnia360/formperma/RE8KdHUoKfhFtDKNICWFlfOnjBcBQZ4hAyAFFxg0GNU"
          allowfullscreen>
        </iframe>
      </section>
    </main>
    {showFooter && <Footer type={footerType} />}
  </body>
</html>
